<!-- Modal -->
<div id="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          Vista de elemento del inventario
        </h5>
        <a type="button" class="btn-close" aria-label="Close" href="/items"></a>
      </div>
      <div class="modal-body">
        <form action="/items">
          <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">Clave</span>
            <input
              type="text"
              class="form-control"
              placeholder="Clave Unica"
              aria-label="Username"
              aria-describedby="basic-addon1"
              disabled
              value="{{item._id}}"
            />
          </div>

          <div class="input-group">
            <span class="input-group-text">Descripción</span>
            <textarea
              class="form-control"
              aria-label="With textarea"
              name="descripcion"
              disabled
            >{{item.descripcion}}</textarea>
          </div>
          <br />
          <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">Marca</span>
            <input
              type="text"
              class="form-control"
              placeholder="Marca"
              aria-label="Username"
              aria-describedby="basic-addon1"
              name="marca"
              value="{{item.marca}}"
              disabled
            />
          </div>

          <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">Serie </span>
            <input
              type="text"
              class="form-control"
              placeholder="Serie"
              aria-label="Username"
              aria-describedby="basic-addon1"
              name="serie"
              value="{{item.serie}}"
              disabled
            />
          </div>

          <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">Fecha </span>
            <input
              type="text"
              class="form-control"
              aria-label="Username"
              aria-describedby="basic-addon1"
              name="date"
              value="{{item.daten}}"
              required
              disabled
            />
          </div>

          <div class="input-group mb-3">
            <label
              class="input-group-text"
              for="inputGroupSelect01"
            >Ubicación</label>
            <select
              id="selUbi"
              class="form-select"
              id="inputGroupSelect01"
              name="ubicacion"
              disabled
            >
              <option selected>{{item.ubicacion}}</option>
              <option value="Sec. Administrativa">Sec. Administrativa</option>
              <option value="Lab. Microprocesadores">Lab. Microprocesadores</option>
              <option value="Biblioteca">Biblioteca</option>
            </select>
          </div>
          <hr />

          <div class="input-group mb-3">
            <label
              class="input-group-text"
              for="DataListResguarda"
            >Resguarda</label>
            <input
              class="form-control"
              list="datalistOptions"
              id="DataListResguarda"
              placeholder="Escriba para buscar..."
              name="resguarda"
              value="{{item.resguarda}}"
              disabled
            />
            <datalist id="datalistOptions">
              <option value="Emilio Castan Rocha"></option>
              <option value="Marcos Azuara Hernandez"></option>
              <option value="Alejandro Garcia"></option>
              <option value="Anel Rocha"></option>
              <option value="Elvira Rolon"></option>
            </datalist>
          </div>

          <div class="input-group mb-3">
            <label
              class="input-group-text"
              for="DataListResguarda"
            >Categoria</label>
            <input
              class="form-control"
              list="datalistOptions"
              id="DataListResguarda"
              placeholder="Escriba para buscar..."
              name="categoria"
              value="{{item.categoria}}"
              disabled
            />
            <datalist id="datalistOptions">
              <option value="Computo"></option>
              <option value="Herramienta"></option>
              <option value="Papeleria"></option>
              <option value="Inmobiliario"></option>
              <option value="Electronica"></option>
            </datalist>
          </div>

          <hr />
          <div class="mb-3">
            <label for="formFile" class="form-label">Imagen</label>

            <img
              class="form-control mx-auto d-block m-4 logo h-10 imgView"
              id="formFile"
              src="{{item.imageURL}}"
              alt="Vista"
            />

          </div>
          <div class="modal-footer">
            <a
              type="button"
              class="btn btn-danger"
              data-bs-dismiss="modal"
              href="/items"
            >
              Cerrar
            </a>
          </div>
        </form>
      </div>

    </div>
  </div>
</div>